{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "jsx": "preserve",
        "allowJs": true,
        "target": "ES2017",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true,
        "plugins": [
            {
                "name": "next",
            },
        ],
        "types": ["jest", "node"],
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        "next-env.d.ts",
        ".next/types/**/*.ts",
        "../../dist/apps/ui/types/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "jest.config.ts",
        "**/*.spec.ts",
        "**/*.test.ts",
    ],
}
